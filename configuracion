<?php
session_start();
include "config.php";

if(!isset($_SESSION['user_id'])) die("No autorizado");

if($_SERVER['REQUEST_METHOD'] == 'POST'){
    $noti = $_POST['notificaciones']; // "on" o "off"

    // Actualiza automáticamente la configuración del usuario
    $sql = "UPDATE configuracion SET notificaciones=? WHERE user_id=?";
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("si", $noti, $_SESSION['user_id']);
    $stmt->execute();

    header("Location: index.php");
}
?>
